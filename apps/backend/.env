NODE_ENV=development
PORT=5002

# Database (unified database for entire monolith)
DATABASE_URL="file:./prisma/flybeth.db"

# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key-for-monolith-development
REFRESH_SECRET=your-super-secret-refresh-key-for-monolith-development

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# CORS
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3002,http://localhost:3003

# External APIs
AMADEUS_CLIENT_ID=your-amadeus-client-id
AMADEUS_CLIENT_SECRET=your-amadeus-client-secret

# Logging
LOG_LEVEL=info

# Redis (for sessions and caching)
REDIS_URL=redis://localhost:6379