{
  "name": "travel-platform-monorepo",
  "version": "1.0.0",
  "description": "B2B and B2C travel booking platform",
  "private": true,
  "workspaces": [
    "apps/frontend/b2c",
    "apps/frontend/b2b",
    "apps/frontend/admin",
    "apps/mobile",
    "apps/backend",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:backend",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "dev:frontend": "concurrently \"npm run dev:admin\" \"npm run dev:b2c\" \"npm run dev:b2b\"",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:admin": "npm run dev --workspace=apps/frontend/admin",
    "dev:b2c": "npm run dev --workspace=apps/frontend/b2c",
    "dev:b2b": "npm run dev --workspace=apps/frontend/b2b",
    "dev:mobile": "npm run start --workspace=apps/mobile",
    "mobile:ios": "npm run ios --workspace=apps/mobile",
    "mobile:android": "npm run android --workspace=apps/mobile",
    "mobile:web": "npm run web --workspace=apps/mobile",
    "build": "npm run build --workspaces",
    "build:frontend": "concurrently \"npm run build --workspace=apps/frontend/admin\" \"npm run build --workspace=apps/frontend/b2c\" \"npm run build --workspace=apps/frontend/b2b\"",
    "build:backend": "npm run build --workspace=apps/backend",
    "test": "npm run test --workspaces",
    "test:frontend": "concurrently \"npm run test --workspace=apps/frontend/admin\" \"npm run test --workspace=apps/frontend/b2c\" \"npm run test --workspace=apps/frontend/b2b\"",
    "lint": "npm run lint --workspaces",
    "clean": "rm -rf node_modules && npm run clean --workspaces",
    "setup": "npm install && npm install --workspaces",
    "status": "echo 'ðŸš€ Development Servers:' && echo 'Backend API: http://localhost:3000' && echo 'Admin Panel: http://localhost:4000' && echo 'B2C App: http://localhost:4100' && echo 'B2B App: http://localhost:4200'",
    "db:setup": "cd apps/backend/auth-service && npx prisma generate && npx prisma migrate dev && cd ../flight-service && npx prisma generate && npx prisma migrate dev"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@prisma/client": "^5.22.0",
    "@types/bcrypt": "^6.0.0",
    "amadeus": "^9.0.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "google-auth-library": "^9.4.1",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^2.0.6",
    "ioredis": "^5.3.2",
    "lucide-react": "^0.294.0",
    "morgan": "^1.10.0",
    "next": "^15.0.0",
    "prisma": "^5.6.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.66.0",
    "tailwind-merge": "^2.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^10.0.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/jsonwebtoken": "^9.0.5",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.0.4",
    "autoprefixer": "^10.4.16",
    "axios": "^1.6.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "globals": "^15.11.0",
    "jsdom": "^23.0.1",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "msw": "^2.0.11",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.46.4",
    "vite": "^5.4.10",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=22.12.0",
    "npm": ">=10.9.0"
  }
}
